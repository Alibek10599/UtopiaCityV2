@using UtopiaCity.ViewModels.FireDepartment

@model List<FireIncidentReportViewModel>
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <a class="btn btn-danger" asp-action="CreateFireIncidentReport" asp-controller="FireDepartment">Create fire incident report</a>
        </div>
    </div>
    <div class="row mt-2">
        @if (Model.Count > 0)
        {
            @foreach (var report in Model)
            {
                <div class="col-12 card col-md-5 col-lg-3 m-1">
                    <div class="card-body">
                        <h5 class="card-title">Fire incident report</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Date of incident: @report.IncidentDate</p>
                        <p class="card-text">Address: @report.Address</p>
                        <p class="card-text">Additional info: @report.AdditionalInfo</p>
                        <a href="#" class="card-link">Delete</a>
                        <a href="#" class="card-link">Edit</a>
                        <a href="#" class="card-link">Send fire brigade</a>
                    </div>
                </div>
            }
        }
        else 
        {
            <h3 class="mt-2">
                Fire Incident Reports were not found.
            </h3>
        }
    </div>
</div>